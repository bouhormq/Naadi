{
  "name": "naadi",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "dev": "node -r dotenv/config scripts/start-dev.js",
    "dev:main": "EXPO_PUBLIC_APP_VARIANT=main expo start --web",
    "dev:partner": "EXPO_PUBLIC_APP_VARIANT=partner expo start --web",
    "set-variant": "node scripts/set-variant.js",
    "build": "eas build",
    "deploy:web": "eas deploy",
    "deploy:web:prod": "eas deploy --prod",
    "export:web": "npx expo export --platform web",
    "test:api": "node tests/run-all-tests.js"
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": [
          "@naadi/api",
          "@naadi/types",
          "@tanstack/react-table",
          "dotenv",
          "firebase",
          "i18next",
          "metro",
          "metro-config",
          "metro-resolver"
        ],
        "listUnknownPackages": false
      }
    }
  },
  "dependencies": {
    "@expo/config-plugins": "~10.0.0",
    "@expo/metro-runtime": "~5.0.4",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-firebase/app": "^22.2.0",
    "@react-native-firebase/firestore": "^22.2.0",
    "@react-native-google-signin/google-signin": "^13.2.0",
    "@react-native-picker/picker": "2.11.0",
    "@react-navigation/stack": "^7.3.2",
    "@tanstack/react-table": "^8.21.3",
    "@types/react": "~19.0.10",
    "dotenv": "^16.5.0",
    "expo": "~53.0.0",
    "expo-constants": "~17.1.6",
    "expo-linking": "~7.1.5",
    "expo-router": "~5.0.7",
    "expo-secure-store": "~14.2.3",
    "expo-splash-screen": "~0.30.8",
    "expo-status-bar": "~2.2.3",
    "firebase": "^9.23.0",
    "i18next": "^25.0.2",
    "metro": "^0.82.0",
    "metro-config": "^0.82.0",
    "metro-resolver": "^0.82.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-i18next": "^15.5.1",
    "react-native": "0.79.2",
    "react-native-international-phone-number": "^0.9.2",
    "react-native-picker": "^4.3.7",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.10.0",
    "react-native-web": "^0.20.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~19.0.10",
    "typescript": "^5.3.0"
  },
  "overrides": {
    "metro": "^0.82.0",
    "metro-config": "^0.82.0",
    "metro-resolver": "^0.82.0",
    "@expo/config-plugins": "~10.0.0"
  },
  "resolutions": {
    "metro": "^0.82.0",
    "metro-config": "^0.82.0",
    "metro-resolver": "^0.82.0",
    "@expo/config-plugins": "~10.0.0"
  },
  "private": true
}
