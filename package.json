{
  "name": "naadi",
  "private": true,
  "workspaces": [
    "naadi-user",
    "naadi-partner",
    "packages/*"
  ],
  "scripts": {
    "build:types": "cd packages/types && npm run build",
    "build:api": "cd packages/api && npm run build",
    "build:all": "bash scripts/build-packages.sh",
    "dev:user": "cd naadi-user && npm run dev",
    "dev:partner": "cd naadi-partner && npm run dev",
    "build:user": "cd naadi-user && eas build",
    "build:partner": "cd naadi-partner && eas build",
    "deploy:user-web": "cd naadi-user && eas deploy --platform web",
    "deploy:partner-web": "cd naadi-partner && eas deploy --platform web",
    "git:sync": "bash scripts/git-sync.sh",
    "test:api": "cd packages/api && npm run test",
    "test:api:studio": "cd packages/api && npm run test:studio",
    "test:api:classes": "cd packages/api && npm run test:classes",
    "test:api:bookings": "cd packages/api && npm run test:bookings",
    "test:api:feedback": "cd packages/api && npm run test:feedback",
    "test:api:functions": "cd packages/api && npm run test:functions",
    "test:api:imports": "cd packages/api && npm run test:imports",
    "test:api:studio-stats": "cd packages/api && npm run test:studio-stats",
    "test:all": "bash scripts/test/run-all-tests.sh",
    "test:cleanup": "node scripts/test/cleanup/cleanup-test-data.js",
    "test:partner": "cd naadi-partner && node tests/run-all-tests.js",
    "test:user": "cd naadi-user && node tests/run-all-tests.js",
    "test:endpoints": "bash scripts/test/run-endpoint-tests.sh"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@react-native-picker/picker": "^2.11.0",
    "react-async-hook": "^4.0.0"
  }
}
